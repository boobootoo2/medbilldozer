# medBillDozer Environment Variables
# Copy this file to .env and set your values

# ==============================================================================
# BACKEND API CONFIGURATION
# ==============================================================================

# ENVIRONMENT - Deployment environment (affects CORS origins and other settings)
# Values: local, development, staging, production
# Default: local
# - local/development: Allows localhost origins (ports 3000, 5173, 8000)
# - staging: Allows https://staging.medbilldozer.com
# - production: Allows https://medbilldozer.com and https://www.medbilldozer.com
ENVIRONMENT=local

# FRONTEND_URL - Primary frontend URL (optional, added to allowed CORS origins)
# Use this to specify your deployed frontend URL regardless of environment
# Example: FRONTEND_URL=https://medbilldozer.vercel.app
FRONTEND_URL=http://localhost:3000

# BACKEND_CORS_ORIGINS - Additional CORS origins as JSON array (optional)
# Use this to allow extra origins beyond the environment defaults
# Must be a valid JSON array of strings
# Example: BACKEND_CORS_ORIGINS=["https://custom-domain.com","https://another-domain.com"]
BACKEND_CORS_ORIGINS=[]

# ==============================================================================
# ACCESS CONTROL
# ==============================================================================

# APP_ACCESS_PASSWORD - Soft gate password for app access
# If set, users must enter this password before accessing the application
# Leave empty or unset for open access (no password required)
# Example: APP_ACCESS_PASSWORD=your_secure_password_here
APP_ACCESS_PASSWORD=

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# GUIDED_TOUR - Enable/disable the interactive guided tour
# Overrides the app_config.yaml setting if set
# Values: TRUE, 1, YES, ON (enable) | FALSE, 0, NO, OFF (disable)
# Leave unset to use app_config.yaml setting
# Example: GUIDED_TOUR=TRUE
GUIDED_TOUR=

# PROFILE_EDITOR_ENABLED - Enable/disable the Profile Editor feature
# Allows users to manage their identity, insurance plans, and provider directory
# Values: TRUE, 1, YES, ON (enable) | FALSE, 0, NO, OFF (disable)
# Example: PROFILE_EDITOR_ENABLED=TRUE
PROFILE_EDITOR_ENABLED=

# IMPORTER_ENABLED - Enable/disable the data import wizard in Profile Editor
# Requires PROFILE_EDITOR_ENABLED=TRUE to work
# Allows users to import insurance EOBs, claim histories, and bills
# Values: TRUE, 1, YES, ON (enable) | FALSE, 0, NO, OFF (disable)
# Example: IMPORTER_ENABLED=TRUE
IMPORTER_ENABLED=

# ==============================================================================
# AI PROVIDER API KEYS
# ==============================================================================

# OpenAI API Key (required for GPT-based analysis)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini API Key (required for Gemini-based analysis)
# Get your key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=

# ==============================================================================
# SUPABASE CONFIGURATION (for Benchmark Monitoring)
# ==============================================================================

# Supabase Project URL
# Get from: Supabase Dashboard → Project Settings → API → Project URL
# Example: SUPABASE_URL=https://abcdefghijklmnop.supabase.co
SUPABASE_URL=

# Supabase Anon Key (for read-only dashboard access)
# Get from: Supabase Dashboard → Project Settings → API → Project API keys → anon public
# Example: SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_ANON_KEY=

# Supabase Service Role Key (for write operations in CI/CD)
# Get from: Supabase Dashboard → Project Settings → API → Project API keys → service_role secret
# ⚠️  KEEP THIS SECRET - Full database access (only use in secure CI/CD environments)
# Example: SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=

# ==============================================================================
# USAGE NOTES
# ==============================================================================

# 1. Never commit .env file to version control
# 2. Keep API keys and passwords secure
# 3. Restart the Streamlit app after changing environment variables
# 4. For deployment, set these variables in your hosting platform's settings
