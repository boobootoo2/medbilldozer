# MedBillDozer Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# API Configuration
# ============================================================================
APP_NAME=MedBillDozer API
APP_VERSION=1.0.0
DEBUG=false

# ============================================================================
# CORS Configuration
# ============================================================================

# ENVIRONMENT - Deployment environment (affects CORS origins and other settings)
# Values: local, development, staging, production
# Default: local
# - local/development: Allows localhost origins (ports 3000, 5173, 8000)
# - staging: Allows https://staging.medbilldozer.com
# - production: Allows https://medbilldozer.com and https://www.medbilldozer.com
ENVIRONMENT=local

# FRONTEND_URL - Primary frontend URL (optional, added to allowed CORS origins)
# Use this to specify your deployed frontend URL regardless of environment
# Example: FRONTEND_URL=https://medbilldozer.vercel.app
FRONTEND_URL=http://localhost:3000

# BACKEND_CORS_ORIGINS - Additional CORS origins as JSON array (optional)
# Use this to allow extra origins beyond the environment defaults
# Must be a valid JSON array of strings
# Example: BACKEND_CORS_ORIGINS=["https://custom-domain.com","https://another-domain.com"]
BACKEND_CORS_ORIGINS=[]

# Legacy (deprecated, will be removed in future version)
# ALLOWED_ORIGINS - Use ENVIRONMENT and FRONTEND_URL instead
# ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# Firebase Authentication
# ============================================================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="your-firebase-private-key-here"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ============================================================================
# Google Cloud Storage
# ============================================================================
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_DOCUMENTS=medbilldozer-documents
GCS_BUCKET_CLINICAL_IMAGES=medbilldozer-clinical

# ============================================================================
# Supabase
# ============================================================================
# Note: If SUPABASE_BETA_URL and SUPABASE_BETA_KEY are set in .zprofile,
# they will be used automatically. Otherwise, use these:
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Beta Supabase (automatically loaded from .zprofile if present)
# SUPABASE_BETA_URL=https://zrhlpitzonhftigmdvgz.supabase.co
# SUPABASE_BETA_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================================================
# AI Providers
# ============================================================================
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=AIza...
HF_API_TOKEN=hf_...

# ============================================================================
# JWT Configuration
# ============================================================================
JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
